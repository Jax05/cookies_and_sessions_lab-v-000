<h1>Add products to your cart</h1>

<%= form_tag("/add", method: "post") do %>
  <%= label(:session, :product, "Product:") %>
  <%= text_field(:session, :product) %>
  <%= submit_tag("add to cart") %><br /><br />
<% end %>

<h2>Cart:</h2>
<ul>
  <% raise session[:cart].inspect %>
  <%= @cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>
