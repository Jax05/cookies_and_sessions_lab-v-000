<h1>Add products to your cart</h1>

<%= form_tag("/add", method: "post") do %>
  <%= label_tag(:product, "Product:") %>
  <%= text_field_tag(:product) %>
  <%= submit_tag("add to cart") %><br /><br />
<% end %>

<% unless @cart.nil? %>
  <h2>Cart:</h2>
  <ul>
    <%= @cart.each do |product| %>
      <li><%= product %></li>
    <% end %>
  </ul>
<% else %>
  <h2>Cart is empty</h2>
<% end %>
